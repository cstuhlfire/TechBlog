<div class="my-header">
  <h3>Add a New Comment</h3>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-post-form">
       <div class="form-group">
        <label for="post-desc">Comment:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-light" data-postid="{{id}}" data-userid="{{user_id}}">Post Comment</button>
      </div>
    </form>
  </div>


</div>

<script src="/js/comment.js"></script>
