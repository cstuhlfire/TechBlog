<div class="my-header">
  <h3>Update a Blog Post</h3>
</div>


  <div class="text-left">
    <h3>{{title}}</h3>
    <p>{{post_text}}</p>
    <p>Created by: {{user.name}} on {{format_date date_created}}</p>
    
    <p>
      <button class="btn btn-light del-post" data-id="{{id}}">Delete</button>
    </p>
  </div>

 <div class="row mt-4">
  <div class="col-md-6">

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" value="{{title}}" />
      </div>
 
      <div class="form-group">
        <label for="post-desc">Post text:</label>
        <textarea class="form-input" id="post-desc" name="post-desc">{{post_text}}</textarea>
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-light update-post" data-id="{{id}}">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update.js"></script>
